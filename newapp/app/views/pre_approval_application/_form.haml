- if !@agent    
  %h3{:style=>"padding: 10px 0 15px 0"}Have you spoken with one of our Mortgage Agents already?
  %dl.pre_approval
    %dt
      %label{:for=>"pre_approval_notes_agent_name"} Agent's Name:
    %dd
      = text_field 'pre_approval_notes', 'agent_name', :name=>'contact[pre_approval_notes][agent_name]', :value=>@contact.pre_approval_notes[:agent_name]

.clearfloat