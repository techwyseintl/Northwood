%h1 Add Agent

.lgreen_box
  .lgreen_header
    %div
  .lgreen_content
    = error_messages_for :user

    - form_for :user, @user, :url => users_path(), :html => {:multipart => true, :method => :post, :id => "user_new_form"} do |f|
      = render :partial => 'form'
      = submit_tag "Create", :class => 'dont_display'
  
  .button
    = link_to 'Cancel', users_path()
  .button
    = link_to 'Save', '#', :onclick => "$('user_new_form').submit(); return false;"
  .clearfloat