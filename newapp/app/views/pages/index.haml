%h1 Pages List

.lgreen_box
  .lgreen_header
    .div
  .lgreen_content
    %table.list_table{:cellpadding => 0, :cellspacing => 0}
      %tr
        %th Title
        %th{:colspan => 3}
                
      - @pages.each do |page|
        %tr{:valign=>"top", :class=>"#{cycle('odd', 'even')}"}
          %td= page.name
          %td{:style=>"width:20px"}= link_to 'Edit', edit_page_path(page)
          %td{:style=>"width:20px"}= link_to 'Destroy', page_path(page), :confirm => 'Are you sure?', :method => :delete
