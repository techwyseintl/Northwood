%h1 Site Images

.lgreen_box
  .lgreen_header
    .div
  .lgreen_content
    =render :partial => 'file_upload_form' if @current_user.is_admin?

    .clearfloat

    %table.list_table{:cellpadding => 0, :cellspacing => 0}
      %tr
        %th Image Thumbnail
        %th Copy bold text into editor to place image

        - @images.each do |image|
          %tr{:class=>"#{cycle('odd', 'even')}" + " image_uploader_table_cell"}
          %td= image_tag(image.public_filename(:thumb))
          %td
            Regular Image: 
            %br/
            %b= "!#{image.public_filename}!"
            %br/
            Small Image:
            %br/
            %b= "!#{image.public_filename(:thumb)}!"
            %br/
            %br/
            = link_to 'Delete this image', site_image_path(image), :method=>:delete, :confirm=>"Are you sure you want to delete this image?"

