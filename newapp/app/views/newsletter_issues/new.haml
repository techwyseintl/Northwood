%h1="New Issue of #{@newsletter.name}"

.lgreen_box
  .lgreen_header
    %div
  .lgreen_content
    
    = error_messages_for 'newsletter'
    - form_for :newsletter_issue, @newsletter_issue, :url => newsletter_issues_path(), :html => {:id => 'newsletter_issue_edit_form'} do |f|
      = render :partial => 'form'
      = submit_tag 'Edit', :class => 'dont_display'

    .button
      = link_to 'Cancel', newsletter_issues_path
    .button
      = link_to 'Save', '#', :onclick => "$('newsletter_issue_edit_form').submit(); return false;"
    .clearfloat